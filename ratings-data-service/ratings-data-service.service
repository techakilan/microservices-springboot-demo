[Unit]
     Description = Microservice Demo Ratings Data Service
     After network.target = ratings-data-service.service

[Service]
     Type = forking
     Restart=always
     RestartSec=1
     SuccessExitStatus=143
     ExecStart = /usr/local/bin/ratings-data-service.sh start
     ExecStop = /usr/local/bin/ratings-data-service.sh stop
     ExecReload = /usr/local/bin/ratings-data-service.sh reload

[Install]
     WantedBy=multi-user.target