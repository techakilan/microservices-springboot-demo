[Unit]
     Description = Microservice Demo Eureka Discovery Service
     After network.target = discovery-service.service

[Service]
     Type = forking
     Restart=always
     RestartSec=1
     SuccessExitStatus=143
     ExecStart = /usr/local/bin/discovery-service.sh start
     ExecStop = /usr/local/bin/discovery-service.sh stop
     ExecReload = /usr/local/bin/discovery-service.sh reload

[Install]
     WantedBy=multi-user.target