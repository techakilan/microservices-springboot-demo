[Unit]
     Description = Microservice Demo API Gateway Service
     After network.target = microservices-api-gateway.service

[Service]
     Type = forking
     Restart=always
     RestartSec=1
     SuccessExitStatus=143
     ExecStart = /usr/local/bin/microservices-api-gateway.sh start
     ExecStop = /usr/local/bin/microservices-api-gateway.sh stop
     ExecReload = /usr/local/bin/microservices-api-gateway.sh reload

[Install]
     WantedBy=multi-user.target